#!/usr/bin/env ruby
require_relative '../lib/turn.rb'


board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def turn (board)
  turns = 0
  while turns < 1 do
    puts "Please enter 1-9:"
    
    input = gets.strip
    
    index = input_to_index(input)
    
    if valid_move?(board, index) == true
      move(board, index)
      turns += 1
    end
  end
end

turn(board)