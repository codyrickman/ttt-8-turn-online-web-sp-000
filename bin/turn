#!/usr/bin/env ruby
require_relative '../lib/turn.rb'
turns = 0
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
def turn (turns, board)
  while turns < 1 do
    puts "Please enter 1-9:"
    
    input = gets.strip
    
    index = input_to_index(input)
    
    if valid_move?(board, index) == true
      move(board, index)
      turns += 1
    else
      return
    end
  end
end

turn(turns, board)